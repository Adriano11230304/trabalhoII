        <form class="form-inline" method="POST" action="/posts/search" >
          <input class="form-control mr-sm-2" type="search" name="search" placeholder="Procure um Post" aria-label="Search">
          <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Procurar</button>
        </form>
      </nav>
</div>
<div class="container">
    <%if(posts.length==0){%>
        <h3 class="m-4">Nenhum Post encontrado!</h3>
    <%}else{%>
        <%for(let i=0; i < posts.length; i++){%>
            <hr class="border border-dark border-2 opacity-50">
            <h6 class="m-2">
                <%=posts[i].createdAt%>
            </h6>
            <hr class="border border-dark border-2 opacity-50">
            <div class="flex-container m-2">
                <h3>
                    <%=posts[i].title%>
                </h3>
            </div>
            <div class="flex-container m-2">
                <a class="btn btn-outline-dark m-2" href="/posts/update/<%=posts[i].id%>">
                    <img src="/img/editar.png" title="Alterar o Post" width="25" height="25">
                </a>
                <a class="btn btn-outline-dark m-2" href="/posts/delete/<%=posts[i].id%>">
                    <img src="/img/excluir.png" title="Excluir o Post" width="25" height="25">
                </a>
                <a class="btn btn-outline-dark m-2" href="/posts/details/<%=posts[i].id%>">
                    <img src="/img/visualizar.png" title="Visualizar o Post" width="25" height="25">
                </a>
                <a class="btn btn-outline-dark m-2" href="#">
                    <img src="/img/like1.png" title="Curtir Post" width="25" height="25">
                </a>
                <a class="btn btn-outline-dark m-2" href="#">
                    <img src="/img/comentarios.png" title="ComentÃ¡rios do Post" width="25" height="25">
                </a>
            </div>

            <div class="flex-container m-2">
                <p class="text-justify">
                    <%=posts[i].description%>
                </p>
            </div>
            <div class="text-center">
                <%if(posts[i].imageURL){%>
                    <img src="<%=posts[i].imageURL%>" alt="Imagem do Post" width="350" height="250">
                <%}%>
            </div>
        <%}%>
    <%}%>
</div>
